<?xml version="1.0" encoding="UTF-8"?>
<phpunit
         bootstrap="bootstrap-unit.php"
         verbose="true"
         colors="true">
    <testsuites>
        <testsuite name="unit">
            <directory>./unit/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">../src</directory>
        </whitelist>
    </filter>
    <php>
        <const name="REEF_IN_PHPUNIT" value="true"/>
    </php>
</phpunit>
