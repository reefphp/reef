<div class="form-group row {{CSSPRFX}}field" data-{{CSSPRFX}}type="reef:textarea" data-{{CSSPRFX}}name="{{field.name}}">
	<div class="{{layout.col_left}}">
		[[submission_label_before]]
		<label class="col-form-label">
			{{field.locale.title}}
		</label>
		[[submission_label_after]]
	</div>
	<div class="{{layout.col_right}}">
		[[submission_input_before]]
		{{#field.hasValue}}
			{{#nl2br}}{{field.value}}{{/nl2br}}
		{{/field.hasValue}}
		{{^field.hasValue}}
			<span class="font-italic text-muted">{{field.locale.rf_submission_empty_value}}</span>
		{{/field.hasValue}}
		[[submission_input_after]]
	</div>
</div>
