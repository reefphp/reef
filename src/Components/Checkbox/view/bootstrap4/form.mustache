<div class="form-group row {{CSSPRFX}}field {{#field.hasErrors}}{{CSSPRFX}}invalid{{/field.hasErrors}}" data-{{CSSPRFX}}type="reef:checkbox" data-{{CSSPRFX}}name="{{field.name}}">
	<label class="{{layout.col_left}} col-form-label" for="{{form_idpfx}}-{{field.name}}">
		{{field.locale.title_left}}
	</label>
	<div class="{{layout.col_right}}">
		<div class="form-check">
			<input
				class="form-check-input {{#field.hasErrors}}is-invalid{{/field.hasErrors}} {{^field.locale.title_right}}position-static{{/field.locale.title_right}}"
				type="checkbox"
				name="{{main_var}}[{{field.name}}]"
				id="{{form_idpfx}}-{{field.name}}"
				value="1"
				{{#field.value}}checked{{/field.value}}
				{{{field.required}}}
			>
			{{#field.locale.title_right}}
			<label class="form-check-label" for="{{form_idpfx}}-{{field.name}}">
				{{field.locale.title_right}}
			</label>
			{{/field.locale.title_right}}
			<div class="invalid-feedback {{CSSPRFX}}error-required-empty" style="display: none;">{{field.locale.rf_error_required_empty}}</div>
			{{#field.errors}}
				<div class="invalid-feedback">{{.}}</div>
			{{/field.errors}}
		</div>
	</div>
</div>
