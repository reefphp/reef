<div class="form-group row {{CSSPRFX}}field {{field.field_classes}}" data-{{CSSPRFX}}type="reef:checkbox" data-{{CSSPRFX}}name="{{field.name}}" {{{field.visible}}}>
	<div class="{{layout.col_left}}">
		[[submission_label_before]]
		<label class="col-form-label">
			{{field.locale.title_left}}
		</label>
		[[submission_label_after]]
	</div>
	<div class="{{layout.col_right}}">
		[[submission_input_before]]
		<div class="form-check">
			<input
				class="form-check-input {{^field.locale.title_right}}position-static{{/field.locale.title_right}}"
				type="checkbox"
				{{#field.value}}checked{{/field.value}}
				readonly
			>
			{{#field.locale.title_right}}
			<label class="form-check-label">
				{{field.locale.title_right}}
			</label>
			{{/field.locale.title_right}}
		</div>
		[[submission_input_after]]
	</div>
</div>
