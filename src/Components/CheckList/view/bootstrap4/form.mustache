<div class="form-group row {{CSSPRFX}}field {{#field.hasErrors}}{{CSSPRFX}}invalid{{/field.hasErrors}}" data-{{CSSPRFX}}type="reef:checklist" data-{{CSSPRFX}}name="{{field.name}}" {{{field.visible}}}>
	<div class="{{layout.col_left}}">
		[[form_label_before]]
		<label class="col-form-label">
			{{field.locale.title}}
		</label>
		[[form_label_after]]
	</div>
	<div class="{{layout.col_right}}">
		[[form_input_before]]
		{{#field.options}}
			<div class="form-check">
				<input
					class="form-check-input {{#field.hasErrors}}is-invalid{{/field.hasErrors}}"
					type="checkbox"
					name="{{main_var}}[{{field.name}}][{{name}}]"
					id="{{form_idpfx}}-{{field.name}}-{{name}}"
					value="1"
					data-name="{{name}}"
					{{#default}}checked{{/default}}
					data-default="{{default}}"
				>
				<label class="form-check-label" for="{{form_idpfx}}-{{field.name}}-{{name}}">
					{{title}}
				</label>
			</div>
		{{/field.options}}
		[[form_input_after]]
		
		{{#field.errors}}
			<div class="invalid-feedback">{{.}}</div>
		{{/field.errors}}
	</div>
</div>
