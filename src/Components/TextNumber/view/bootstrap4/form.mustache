<div class="form-group row {{CSSPRFX}}component {{#component.hasErrors}}{{CSSPRFX}}invalid{{/component.hasErrors}}" data-{{CSSPRFX}}type="reef:text_number" data-{{CSSPRFX}}name="{{component.name}}">
	<label class="{{layout.col_left}} col-form-label" for="{{component.name}}">
		{{component.locale.title}}
	</label>
	<div class="{{layout.col_right}}">
		<input
			type="number"
			class="form-control {{#component.hasErrors}}is-invalid{{/component.hasErrors}}"
			id="{{component.name}}"
			name="{{main_var}}[{{component.name}}]"
			placeholder="{{component.locale.placeholder}}"
			value="{{component.value}}"
			{{#component.hasMin}}min="{{component.min}}"{{/component.hasMin}}
			{{#component.hasMax}}max="{{component.max}}"{{/component.hasMax}}
			{{#component.step}}step="{{component.step}}"{{/component.step}}
			{{#component.required}}required{{/component.required}}
		>
		<div class="invalid-feedback {{CSSPRFX}}error-required-empty" style="display: none;">{{component.locale.error_required_empty}}</div>
		<div class="invalid-feedback {{CSSPRFX}}error-number-range" style="display: none;">{{component.locale.error_number_range}}</div>
		{{#component.errors}}
			<div class="invalid-feedback">{{.}}</div>
		{{/component.errors}}
	</div>
</div>
